#include <stdio.h>
#include <stdlib.h>

int main(){
    int numeros[4] = {1, 2, 3, 4};
    int i = 3;
    
    while (i >= 0) {
		printf(" %d", numeros[i]);
		i--;
		
		}
}



#include <stdio.h>
#include <stdlib.h>

int main(){
    int fila[10] = {10, 21, 30, 43, 50, 60, 77, 83, 90};
    int par[10];
    int impar[10];
   		printf("FILA PAR\n ");
       for (int i = 0; i < 10; i++)  {
		if (fila[i] % 2 == 0 ) {
		par[i] = fila[i];
		printf("%d ", par[i]);
		} }
		printf("\n ");
		printf("FILA IMPAR \n");
		for (int i = 0; i < 10; i++) {
		if (fila[i] % 2 == 1 ) {
		impar[i] = fila[i];
		printf("%d ", impar[i]);
		}	}
		
		
}
